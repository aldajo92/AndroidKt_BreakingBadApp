<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BreakingBadApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.BreakingBadApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewContentWhite">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewSmallWhite">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewMedium" parent="TextViewSmallWhite">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextViewTitleWhite" parent="TextViewSmallWhite">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewWhite" parent="TextViewSmallWhite">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewHuge" parent="TextViewSmallWhite">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

</resources>
